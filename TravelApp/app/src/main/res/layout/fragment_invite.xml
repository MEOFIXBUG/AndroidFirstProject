<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_card_travel_orange_24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etTourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@drawable/rounded_edittext"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:textSize="@dimen/editTextSize"
                    android:hint="Tour name" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content" android:layout_margin="5dp">
            <ImageView
                android:id="@+id/icon_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_date_range_black_24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:textSize="@dimen/editTextSize"
                android:background="@drawable/rounded_edittext"
                android:editable="false"
                android:clickable="true"
                android:hint="Start date" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_date_range_black_24dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext"
                android:layout_centerHorizontal="true"
                android:editable="false"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:textSize="@dimen/editTextSize"
                android:hint="End date" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content" android:layout_margin="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_people_black_24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etAdults"
                android:background="@drawable/rounded_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:textSize="@dimen/editTextSize"
                android:inputType="number"
                android:hint="Adults" />
            </com.google.android.material.textfield.TextInputLayout>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_people_black_24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etChilds"
                android:background="@drawable/rounded_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/editTextSize"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="number"
                android:hint="Childs" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content" android:layout_margin="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_monetization_on_black_24dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etMinCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/editTextSize"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:hint="MinCost" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_monetization_on_black_24dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etMaxCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/editTextSize"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:inputType="number"
                android:hint="MaxCost" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="wrap_content" android:layout_margin="10dp">

            <EditText
                android:id="@+id/etAvatar"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:layout_weight="2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:textSize="@dimen/editTextSize"
                android:hint="Avatar image of tour" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="change"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:id="@+id/updateAvatar"
                android:textSize="13dp"
                android:layout_marginLeft="23dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="wrap_content" android:layout_margin="10dp">

            <AutoCompleteTextView
                android:id="@+id/uInvite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Enter friend name here . . ."
                android:singleLine="true"
                android:textSize="@dimen/editTextSize" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnInvite"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:gravity="center"
                android:background="@drawable/bg_button"
                android:text="Invite"
                android:textSize="13dp"
                android:layout_marginLeft="23dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">
            <CheckBox
                android:id="@+id/checkbox_id"
                android:text="Make public"
                android:checked="false"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="30dp"
    android:layout_weight="2"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btnDone"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/bgBottomNavigation"
        android:text="update"
        android:textSize="20dp"
        android:textColor="#FFFFFFFF"
        android:gravity="center"
android:layout_marginRight="30dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="0dp"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="bottom|right"
        android:text="REMOVE"
        android:padding="4dp"
        android:id="@+id/btnRemoveTour"
        android:background="@color/red"
        android:textColor="@color/white"
        android:layout_height="wrap_content">

    </Button>
</LinearLayout>

    </LinearLayout>
</ScrollView>
